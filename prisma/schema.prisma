generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  coreId    String             @id
  firstName String
  lastName  String
  email     String
  createdAt DateTime           @default(now())
  devices   DeviceAllocation[]
}

model Employee {
  coreId    String             @id
  firstName String
  lastName  String
  email     String
  createdAt DateTime           @default(now())
  devices   DeviceAllocation[]
}

model Device {
  id          Int        @id @default(autoincrement())
  serialNo    String
  typeId      Int
  isAvailable Boolean    @default(true)
  deviceType  DeviceType @relation(fields: [typeId], references: [id])
  remarks     String
  createdAt   DateTime   @default(now())
}

model DeviceType {
  id        Int      @id @default(autoincrement())
  type      String   @unique
  createdAt DateTime @default(now())
  devices   Device[]
}

model DeviceAllocation {
  id           Int      @id @default(autoincrement())
  employeeId   String
  userId       String
  handedOn     DateTime @default(now())
  returnedOn   DateTime
  employee     Employee @relation(fields: [employeeId], references: [coreId])
  authorizedBy User     @relation(fields: [userId], references: [coreId])
  remarks      String
  createdAt    DateTime @default(now())
}
